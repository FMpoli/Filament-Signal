{
    "name": "voodflow/voodflow",
    "description": "A powerful workflow and trigger automation system for FilamentPHP 4 that listens to any Laravel event and reacts with configurable actions. Manage email templates via the built‑in Tiptap editor, fire webhooks, send multi-channel notifications, and track delivery logs—all from a single panel-ready plugin.",
    "keywords": [
        "Voodflow",
        "laravel",
        "voodflow"
    ],
    "homepage": "https://github.com/voodflow/voodflow",
    "support": {
        "issues": "https://github.com/voodflow/voodflow/issues",
        "source": "https://github.com/voodflow/voodflow"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Francesco Mulassano",
            "email": "francesco.mulassano@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "filament/filament": "^4.0",
        "spatie/laravel-package-tools": "^1.15.0",
        "spatie/laravel-webhook-server": "^3.8"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.9",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^2.1",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Voodflow\\Voodflow\\": "src/",
            "Voodflow\\Voodflow\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Voodflow\\Voodflow\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Voodflow\\Voodflow\\VoodflowServiceProvider"
            ],
            "aliases": {
                "Voodflow": "Voodflow\\Voodflow\\Facades\\Voodflow"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}